<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rgUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbUser001"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/app_color_blue"
            android:checked="true"
            android:text="被叫用户:001" />

        <RadioButton
            android:id="@+id/rbUser002"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/app_color_blue"
            android:text="被叫用户:002" />

        <RadioButton
            android:id="@+id/rbUser003"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/app_color_blue"
            android:text="被叫用户:003" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSinglePersonCall"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="发起单人通话"
        app:layout_constraintBottom_toTopOf="@+id/btnMultiPersonCall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMultiPersonCall"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="发起多人通话"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSinglePersonCall" />

</androidx.constraintlayout.widget.ConstraintLayout>