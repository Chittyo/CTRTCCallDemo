<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioGroup
        android:id="@+id/rgUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rbUser001"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="被叫用户:001"
            android:background="@color/app_color_blue"
            android:layout_marginEnd="10dp"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/rbUser002"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="被叫用户:002"
            android:background="@color/app_color_blue"
            android:layout_marginEnd="10dp"
            />
        <RadioButton
            android:id="@+id/rbUser003"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="被叫用户:003"
            android:background="@color/app_color_blue"
            />
    </RadioGroup>
    <Button
        android:id="@+id/btnSinglePersonCall"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="发起单人通话"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnMultiPersonCall"
        />

    <Button
        android:id="@+id/btnMultiPersonCall"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="发起多人通话"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSinglePersonCall"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>